<!DOCTYPE html>
<html>
<head>
  <title>Railsapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_tag "http://code.jquery.com/jquery-2.2.2.min.js" %>
  <%= javascript_tag "https://code.jquery.com/color/jquery.color-2.1.2.js" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <img src="" class="">
    <div class="login">
      <% if session[:current_user_id] %>
      <h1>Welcome Back</h1>
      <%= link_to "#{User.find(session[:current_user_id]).username}", user_path(session[:current_user_id]) %> ||
      <%= link_to "Logout", sessions_path, method: :delete %> ||
      <%= link_to "Add a New Order", new_order_path %> ||
      <%= link_to "Manage Tables", tables_path %> ||
      <%= link_to "Menu", fooditems_path %> ||
      <%= link_to "View All Orders", orders_path %>
      <% else %>
      <h1>Already A Member</h1>
      <%= form_tag(sessions_path) do%>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
      <br>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <br><br>
      <%= submit_tag "Login"%>
      <% end %>
      <% end %>
      <%= yield %>
</div>
</body>
</html>
